    .line {
      fill: none;
      stroke: steelblue;
      stroke-width: 1.5px;
    }
    .tText {
        font-size: 30px;
    }
    .overlay {
      fill: none;
      pointer-events: all;
    }

    .focus circle {
      fill: none;
      stroke: steelblue;
    }

    .area {
      fill: steelblue;
    }
